{
    "include": ["src"],
    "compilerOptions": {
        "target": "es2016",
        "lib": ["es2022"],
        "module": "commonjs",
        "outDir": "lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"]
    }
}
